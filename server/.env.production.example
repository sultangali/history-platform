# ===========================================
# PRODUCTION CONFIGURATION
# Используется на боевом сервере
# ===========================================

# Режим проекта (переключатель dev/prod)
PROJECT_MODE=prod

# Порт сервера
PORT=5000

# Окружение Node.js
NODE_ENV=production

# MongoDB подключение (production база)
MONGODB_URI=mongodb://127.0.0.1:27017/repression-archive

# JWT секретный ключ
# ВАЖНО: Сгенерируйте надежный ключ! Например:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_production_secret_key_min_32_chars

# Срок действия JWT токена
JWT_EXPIRES_IN=7d

# IP адрес сервера (для production)
SERVER_IP=34.51.218.216

# CORS настройки (только ваш домен)
# Измените на ваш реальный домен
CORS_ORIGIN=https://yourdomain.com

# Опционально: Email настройки для уведомлений
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
